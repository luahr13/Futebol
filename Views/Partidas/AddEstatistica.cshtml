@model Futebol.Models.EstatisticasPartida

@{
    ViewBag.Title = "Registrar Gol";
}

<h2>Registrar Gol</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.TimeID, "Time")
        @Html.DropDownListFor(model => model.TimeID, ViewBag.Times as SelectList, "Selecione o Time", new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.JogadorID, "Jogador")
        @Html.DropDownListFor(model => model.JogadorID, ViewBag.Jogadores as SelectList, "Selecione o Jogador", new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Registrar Gol</button>
}
@model IEnumerable<Futebol.Models.Partidas>

@{
    ViewBag.Title = "Lista de Partidas";
}

<h2 class="mb-4">Partidas Cadastradas</h2>

<p>
    @Html.ActionLink("Criar Nova Partida", "Create", null, new { @class = "btn btn-success mb-4" })
</p>

<div class="row">
    @foreach (var partida in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card shadow-sm text-center">
                <div class="card-body">
                    <h5 class="card-title">@partida.NomeDaPartida</h5>
                    <p class="card-text">
                        <strong>Times:</strong> @partida.TimeCasa.NomeDoTime vs. @partida.TimeVisitante.NomeDoTime<br>
                        <strong>Estádio:</strong> @(partida.Estadio ?? "Não informado")
                    </p>
                    <div class="mt-3">
                        @Html.ActionLink("Editar", "Edit", new { id = partida.ID }, new { @class = "btn btn-primary btn-sm mx-1" })
                        @Html.ActionLink("Detalhes", "Details", new { id = partida.ID }, new { @class = "btn btn-info btn-sm mx-1" })
                        @Html.ActionLink("Excluir", "Delete", new { id = partida.ID }, new { @class = "btn btn-danger btn-sm mx-1" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>
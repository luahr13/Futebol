@{
    ViewBag.Title = "Home Page";
}

<main>
    <!-- Carrossel -->
    <div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/imagens/1.png" class="d-block w-100" alt="Imagem 1">
            </div>
            <div class="carousel-item">
                <img src="~/Content/imagens/2.png" class="d-block w-100" alt="Imagem 2">
            </div>
            <div class="carousel-item">
                <img src="~/Content/imagens/3.png" class="d-block w-100" alt="Imagem 3">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>

    <!-- Container principal -->
    <div class="container-fluid">
        <div class="row">
            <!-- Menu lateral -->
            <nav class="col-md-3 col-lg-2 bg-light sidebar p-3">
                <h4>Menu</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Times", "Index", "Times", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Jogadores", "Index", "Jogador", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Partidas", "Index", "Partidas", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Estatísticas", "Index", "Estatisticas", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
            </nav>

            <!-- Conteúdo principal -->
            <main class="col-md-9 col-lg-10">
                <h1>Bem-vindo ao site de Futebol</h1>
                <p>Escolha uma das opções no menu ao lado.</p>
            </main>
        </div>
    </div>
</main>
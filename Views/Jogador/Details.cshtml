@model Futebol.Models.Jogador

@{
    ViewBag.Title = "Detalhes do Jogador";
}

<h2>Detalhes do Jogador</h2>

<div class="card shadow p-4">
    <h4 class="card-title mb-3">Informações do Jogador</h4>

    <!-- Dados do jogador com linhas de separação -->
    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nome:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.NomeDoJogador</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Data de Nascimento:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.DataDeNascimento.ToString("dd/MM/yyyy")</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Nacionalidade:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.Nacionalidade</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Posição:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.Posicao</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Número da Camisa:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.CamisaNumero</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Altura:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.Altura</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Peso:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.Peso</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Pé Dominante:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.PeDominante</p>
        </div>
    </div>
    <hr />

    <div class="row mb-3">
        <label class="col-sm-3 col-form-label">Time:</label>
        <div class="col-sm-9">
            <p class="form-control-plaintext">@Model.Time.NomeDoTime</p>
        </div>
    </div>
</div>

<!-- Botões de navegação -->
<div class="mt-4">
    @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
</div>
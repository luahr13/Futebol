@model Futebol.Models.Time

@{
    ViewBag.Title = "Detalhes do Time";
}

<h2 class="mb-4">Detalhes do Time</h2>

<table class="table table-bordered table-striped">
    <tbody>
        <tr>
            <th class="bg-light">Nome do Time</th>
            <td>@Model.NomeDoTime</td>
        </tr>
        <tr>
            <th class="bg-light">Cidade</th>
            <td>@Model.Cidade</td>
        </tr>
        <tr>
            <th class="bg-light">Estado</th>
            <td>@Model.Estado</td>
        </tr>
        <tr>
            <th class="bg-light">Ano de Fundação</th>
            <td>@Model.AnoFundacao</td>
        </tr>
        <tr>
            <th class="bg-light">Estádio</th>
            <td>@Model.Estadio</td>
        </tr>
        <tr>
            <th class="bg-light">Cores do Uniforme</th>
            <td>@Model.CoresUniforme</td>
        </tr>
    </tbody>
</table>

<div class="mt-3">
    @Html.ActionLink("Editar", "Edit", new { id = Model.ID }, new { @class = "btn btn-primary" })
    @Html.ActionLink("Voltar para a Lista", "Index", null, new { @class = "btn btn-secondary" })
</div>